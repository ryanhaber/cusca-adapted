{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

{{!-- The main content area on the homepage --}}
<div class="row medium-unstack">
    <main id="content" class="content medium-8 large-9 columns" role="main">
        {{!-- If we have a tag cover, display that - else blog cover - else nothing --}}
        {{#tag}}
            <header class="main-header tag-head">
                <div class="vertical">
                    <div class="main-header-content inner">
                        <h1 class="page-title"><i class="fa fa-tag"></i>{{name}}</h1>
                        <h5 class="page-description">
                            {{#if description}}
                                {{description}}
                            {{else}}
                                A {{../pagination.total}}-post collection
                            {{/if}}
                        </h5>
                    </div>
                </div>
            </header>
        {{/tag}}

        {{!-- The tag below includes the post loop - partials/loop.hbs --}}
        {{> "loop"}}

    </main>

    {{!-- Sidebar --}}
    <aside class="sidebar medium-4 large-3 columns show-for-medium">
        {{> "sidebar"}}
    </aside>
</div>